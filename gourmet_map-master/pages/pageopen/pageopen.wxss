  width: 70%;
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.share-ui-row .share-content-box image {
  width: 80rpx;
  height: 80rpx;
}
.share-ui-row .share-content-box button {
  position: absolute;
  opacity: 0;
  width: 100%;
  height: 100%;
}


.container_re {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 0 25rpx 0;
    box-sizing: border-box;
}


.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: absolute;
    transform: translate(-50%,-50%);
    top: 50%;
    left: 50%;
    z-index: 800;
}

.userinfo-avatar {
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
    border: 8rpx solid #fff;
}

.list-header {
    position: relative;
    height: 450rpx;
    overflow: hidden;
}

.list-header_blur {
    width: 120%;
    height: 150%;
    overflow: hidden;
    position: absolute;
    top: -25%;
    left: -10%;
}

.list-header_bg {
    width: 100%;
    height: 100%;
    background-position: 50% 50%;
    -webkit-filter: blur(25px);
    opacity: 0.5;
    background-size: cover;
}

.list-header-avatar {
    position: absolute;
    transform: translate(-50%,-50%);
    top: 50%;
    left: 50%;
    z-index: 300;
    width: 128rpx;
    height: 128rpx;
}

.feedback-min {
    width: 45rpx;
    height: 45rpx;
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    z-index: 800;
}

.dec {
}

.dec-text {
    font-size: 25rpx;
    color: #757575;
}

.userinfo-nickname {
    color: #878787;
    margin-top: 15rpx;
}

.log-list {
    display: flex;
    flex-direction: column;
    padding: 40rpx;
}

.log-text {
    margin: 20rpx;
    font-size: 30rpx;
    color: #757575;
    text-align: left;
}

.about {
    background-color: rgba(255,255,255,0.7);
    position: absolute;
    top: 20rpx;
    right: 25rpx;
    z-index: 99;
    padding: 15rpx 25rpx;
    border-radius: 35rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    flex-wrap: nowrap;
}

.about image {
    position: relative;
    width: 43rpx;
    height: 43rpx;
}

.about text {
    position: relative;
    font-size: 25rpx;
    color: #444;
    margin-left: 10rpx;
}

.about_tip {
    width: 100%;
    min-height: 100%;
    position: absolute;
    z-index: 990;
    background-color: rgba(0,0,0,0.2);
    top: 0px;
    left: 0px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    flex-wrap: nowrap;
}

.about_tip_in {
    width: 100%;
    position: relative;
    display: flex;
    justify-content: center;
    margin: 105rpx 0rpx;
    top: 0px;
    left: 0px;
}

.about_tip_main {
    width: 75%;
    position: aabsolute;
    background-color: #fff;
    padding: 50rpx;
    border-radius: 15rpx;
    box-shadow: 0px 0px 10px #aaa;
}

.about-title {
    font-size: 40rpx;
    line-height: 1.2;
    font-weight: normal;
    outline: none;
    color: #444;
    margin-bottom: 25rpx;
    text-align: center;
}

.about-summary {
    font-size: 30rpx;
    line-height: 1.8rem;
    text-align: center;
}

.about-desc {
    font-size: 30rpx;
    line-height: 1.8rem;
    margin-top: 20rpx;
    text-align: justify;
}

.about-article {
    margin-bottom: 1.142857143rem;
}

.ijiFollowers {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
}

.ijiFollowersList {
    width: 230rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    flex-wrap: nowrap;
    padding-bottom: 50rpx;
    transition: all ease 0.3s;
}

.Hover {
    border-bottom: 1px solid #c1c1c1;
}

.unHover {
    border-bottom: 1px solid #e9e9e9;
}

.ijiFollowersNum {
    font-size: 50rpx;
    color: #878787;
    font-weight: lighter;
}

.ijiFollowersText {
    font-size: 38rpx;
    color: #878787;
}

.ijiLogList {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: wrap;
    padding: 60rpx 16.875rpx 0 16.875rpx!important;
}

.ijilogItems {
    width: 205rpx;
    height: 205rpx;
    border-radius: 5px;
    background-position: 50% 50%;
    background-size: cover;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    box-shadow: rgba(0,0,0,0.25) 0 8rpx 50rpx;
    position: relative;
    margin-bottom: 85rpx;
    margin-right: 16.875rpx;
    margin-left: 16.875rpx;
    text-align: center;
}

.ijiLogText {
    color: #fff;
    font-size: 80rpx;
}

.ijiLogTittle {
    color: #757575;
    font-size: 25rpx;
    padding: 5rpx 0;
    position: absolute;
    bottom: -40rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 205rpx;
}

.ijiBackgroundBlur {
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: -1;
    top: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    background-color: #fff;
}

.ijiBackgroundBlurBg {
    width: 130%;
    height: 126%;
    top: -13%;
    left: -15%;
    position: absolute;
    background-position: 50% 50%;
    background-size: cover;
    -webkit-filter: blur(80rpx);
    opacity: 0.3;
}

.ijiContainer {
    background-color: transparent!important;
}
button::after{
    border:none;
}
.ijiHasCommentLogList {
    width: 100%;
    padding:60rpx 15rpx 11rpx 23rpx;
}

.ijiCommentLogList {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    flex-wrap: wrap;
    flex-direction:row;
}

.ijiCommentLogItems {
    background-color: #fafafa;
    border-radius: 10rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: nowrap;
    align-items: center;
    box-shadow:rgba(0,0,0,0.25) 0 8rpx 50rpx;
    width:205rpx;
    height:205rpx;
    margin-right:20rpx;
    margin-left:20rpx;
    border-radius:5px;
    margin-bottom:35rpx;
}

.ijiLogThumb {
    width: 205rpx!important;
    height: 205rpx!important;
    border-radius: 5rpx;
    background-position: 50% 50%;
    background-size: cover;
    
}

.ijiCommentLogItems text {
  color:#757575;
  font-size:25rpx;
  padding:5rpx 0;
  position:absolute;
  bottom:-40rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  width:205rpx;
  display: none;
}
.noLog {
    padding: 100rpx 0;
}